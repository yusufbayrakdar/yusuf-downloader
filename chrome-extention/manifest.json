{
  "manifest_version": 2,
  "name": "YouTube MP3 Downloader",
  "description": "YouTube MP3 Downloader allows you to download YouTube videos as MP3.",
  "author": "Yusuf Sabri Bayrakdar",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "youtube.png"
  },
  "browser_action": {
    "default_icon": "youtube.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "downloads", "https://www.youtube.com/*"]
}
